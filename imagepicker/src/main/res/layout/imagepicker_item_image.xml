<?xml version="1.0" encoding="utf-8"?>
<com.nguyenhoanglam.imagepicker.widget.SquareFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foregroundGravity="center"
    tools:override="false">

    <ImageView
        android:id="@+id/image_thumbnail"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <View
        android:id="@+id/view_alpha"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/imagepicker_black" />

    <TextView
        android:id="@+id/file_name"
        style="@style/imagepicker_TextSmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:textAlignment="center"
        android:background="@color/imagepicker_black_alpha_50"
        android:paddingLeft="@dimen/imagepicker_padding_large"
        android:paddingTop="@dimen/imagepicker_padding_small"
        android:paddingRight="@dimen/imagepicker_padding_large"
        android:paddingBottom="@dimen/imagepicker_padding_small"
        android:textSize="10dp"
        android:text="File Name"
        android:maxLines="1"
        android:textColor="@color/imagepicker_white"
        android:visibility="visible" />

</com.nguyenhoanglam.imagepicker.widget.SquareFrameLayout>